<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/sand"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:scaleType="fitXY"
        android:layout_marginTop="250dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/sandwich_bg_1"/>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/sand"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintVertical_weight="1"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:layout_width="260dp"
            android:layout_height="38dp"
            android:layout_marginTop="200dp"
            android:layout_marginBottom="115dp"
            android:scaleType="fitXY"
            android:src="@drawable/page_1" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_marginBottom="4dp"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="@drawable/bluebackground"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="22dp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="14dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="21dp"
                    android:src="@drawable/logo_fb2" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="24dp"
                    android:layout_gravity="right"
                    android:background="#ffffff" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="페이스북 계정으로 로그인"
                android:textColor="#ffffff"
                android:textSize="14dp"
                android:textStyle="bold" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_marginBottom="16dp"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="@drawable/yellowbackground"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="22dp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="14dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="22dp"
                    android:src="@drawable/logo_kt" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="24dp"
                    android:layout_gravity="right"
                    android:background="#ffffff" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="카카오 계정으로 로그인"
                android:textColor="#ffffff"
                android:textSize="14dp"
                android:textStyle="bold" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/arrows" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회원가입 건너뛰고 레시피 확인하기"
                android:textColor="#9b9b9b"
                android:textSize="14dp" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>